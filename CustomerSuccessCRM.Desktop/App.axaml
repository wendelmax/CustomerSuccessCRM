<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CustomerSuccessCRM.Desktop.App"
             xmlns:local="using:CustomerSuccessCRM.Desktop"
             RequestedThemeVariant="Light">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        
        <!-- Base Styles -->
        <Style Selector="Window">
            <Setter Property="FontFamily" Value="Inter, Segoe UI, sans-serif"/>
        </Style>

        <!-- Card Style -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BoxShadow" Value="0 4 15 0 #10000000"/>
        </Style>
        
        <Style Selector="Border.card:pointerover">
            <Setter Property="BoxShadow" Value="0 8 20 0 #15000000"/>
            <Setter Property="RenderTransform" Value="translateY(-2px)"/>
        </Style>
        
        <!-- Text Styles -->
        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1e293b"/>
        </Style>
        
        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#334155"/>
        </Style>
        
        <Style Selector="TextBlock.h3">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#64748b"/>
        </Style>
        
        <!-- Button Styles -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#4f46e5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#4338ca"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Progress Bar Style -->
        <Style Selector="ProgressBar">
            <Setter Property="Foreground" Value="#4f46e5"/>
            <Setter Property="Background" Value="#f1f5f9"/>
            <Setter Property="CornerRadius" Value="99"/>
            <Setter Property="Height" Value="8"/>
        </Style>
        
        <!-- DataGrid Styles -->
        <Style Selector="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#f1f5f9"/>
            <Setter Property="CornerRadius" Value="12"/>
        </Style>
        
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#f8fafc"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#64748b"/>
        </Style>
    </Application.Styles>
    
    <Application.Resources>
        <!-- Colors -->
        <Color x:Key="PrimaryColor">#4f46e5</Color>
        <Color x:Key="SidebarBg">#111827</Color>
        <Color x:Key="SidebarHover">#1f2937</Color>
        
