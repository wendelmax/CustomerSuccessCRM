<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CustomerSuccessCRM.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        x:Class="CustomerSuccessCRM.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Customer Success CRM">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Menu Lateral -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBg}">
            <DockPanel>
                <!-- Logo -->
                <Border DockPanel.Dock="Top" Height="80" Padding="20">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Width="36" Height="36" Background="{StaticResource PrimaryColor}" CornerRadius="8">
                            <TextBlock Text="C" Foreground="White" FontWeight="Bold" FontSize="22"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Customer CRM" Foreground="White" FontWeight="SemiBold"
                                 VerticalAlignment="Center" FontSize="18"/>
                    </StackPanel>
                </Border>

                <!-- Menu Items -->
                <StackPanel Spacing="4" Margin="0,10,0,0">
                    <Button Classes="menuItem" Command="{Binding ShowDashboardCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon Data="{StaticResource icon_dashboard}" Width="18" Height="18" Foreground="#94a3b8"/>
                            <TextBlock Text="Dashboard" Foreground="#f8fafc" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Classes="menuItem" Command="{Binding ShowClientesCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon Data="{StaticResource icon_users}" Width="18" Height="18" Foreground="#94a3b8"/>
                            <TextBlock Text="Clientes" Foreground="#f8fafc" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Classes="menuItem" Command="{Binding ShowProdutosCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon Data="{StaticResource icon_box}" Width="18" Height="18" Foreground="#94a3b8"/>
                            <TextBlock Text="Produtos" Foreground="#f8fafc" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Classes="menuItem" Command="{Binding ShowMetasCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon Data="{StaticResource icon_target}" Width="18" Height="18" Foreground="#94a3b8"/>
                            <TextBlock Text="Metas" Foreground="#f8fafc" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Text="RELATÓRIOS" Foreground="#4b5563" Margin="20,24,20,8"
                             FontSize="11" FontWeight="Bold" LetterSpacing="1"/>

                    <Button Classes="menuItem">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon Data="{StaticResource icon_chart}" Width="18" Height="18" Foreground="#4b5563"/>
                            <TextBlock Text="Performance" Foreground="#94a3b8" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Text="SISTEMA" Foreground="#4b5563" Margin="20,24,20,8"
                             FontSize="11" FontWeight="Bold" LetterSpacing="1"/>

                    <Button Classes="menuItem">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon Data="{StaticResource icon_settings}" Width="18" Height="18" Foreground="#4b5563"/>
                            <TextBlock Text="Configurações" Foreground="#94a3b8" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Conteúdo Principal -->
        <Grid Grid.Column="1" Background="#f8fafc">
            <!-- Header -->
            <Border Height="80" VerticalAlignment="Top" Background="White"
                   BorderBrush="#f1f5f9" BorderThickness="0,0,0,1">
                <Grid Margin="32,0">
                    <TextBlock Text="{Binding CurrentPage}" FontSize="24" FontWeight="Bold"
                             Foreground="#1e293b" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ContentControl Margin="32,100,32,32" Content="{Binding CurrentView}"/>
        </Grid>
    </Grid>

    <Window.Styles>
        <Style Selector="Button.menuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.menuItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource SidebarHover}"/>
        </Style>
        <Style Selector="Button.menuItem:pointerover PathIcon">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

</Window>
