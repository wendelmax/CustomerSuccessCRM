<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CustomerSuccessCRM.Desktop.ViewModels.Metas"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="CustomerSuccessCRM.Desktop.Views.Metas.MetasView"
             x:DataType="vm:MetasViewModel">

    <Grid RowDefinitions="Auto, *">
        <!-- Header -->
        <Border Grid.Row="0" Margin="0,0,0,24">
            <Grid ColumnDefinitions="*, Auto">
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Metas" Classes="h1" Margin="0,0,0,4"/>
                    <TextBlock Text="Acompanhamento de objetivos e performance comercial" Classes="h3"/>
                </StackPanel>
                
                <Button Grid.Column="1" Classes="primary" IsVisible="{Binding !IsEditing}" Command="{Binding StartAddCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <PathIcon Data="{StaticResource icon_target}" Width="18" Height="18" Foreground="White"/>
                        <TextBlock Text="Nova Meta" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*, Auto">
            <!-- List Column -->
            <StackPanel Grid.Column="0" Spacing="24">
                <!-- Search Bar -->
                <Border Classes="card">
                    <TextBox Text="{Binding SearchTerm}" 
                            Watermark="Buscar objetivo ou descrição..."
                            Classes="search">
                        <TextBox.InnerLeftContent>
                            <PathIcon Data="{StaticResource icon_search}" Width="16" Height="16" Margin="12,0,0,0" Foreground="#64748b"/>
                        </TextBox.InnerLeftContent>
                    </TextBox>
                </Border>

                <!-- DataGrid Card -->
                <Border Classes="card" Padding="0" ClipToBounds="True">
                    <DataGrid ItemsSource="{Binding Metas}"
                              SelectedItem="{Binding SelectedMeta}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0"
                              Background="Transparent">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="AÇÕES" Width="Auto">
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="4" Margin="4,0" HorizontalAlignment="Center">
                                        <Button Classes="icon" Command="{Binding $parent[UserControl].((vm:MetasViewModel)DataContext).StartEditCommand}"
                                                CommandParameter="{Binding}">
                                            <PathIcon Data="{StaticResource icon_edit}" Width="16" Height="16" Foreground="#2563eb"/>
                                        </Button>
                                        <Button Classes="icon" Command="{Binding $parent[UserControl].((vm:MetasViewModel)DataContext).ConcluirMetaCommand}"
                                                CommandParameter="{Binding}">
                                            <PathIcon Data="{StaticResource icon_check}" Width="16" Height="16" Foreground="#16a34a"/>
                                        </Button>
                                        <Button Classes="icon" Command="{Binding $parent[UserControl].((vm:MetasViewModel)DataContext).DeleteCommand}" CommandParameter="{Binding}">
                                            <PathIcon Data="{StaticResource icon_delete}" Width="16" Height="16" Foreground="#ef4444"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Edit Dialog -->
        <Panel IsVisible="{Binding IsEditing}">
            <Rectangle Fill="Black" Opacity="0.5"/>
            <Border Classes="card" Width="500" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Nova Meta" Classes="h2" Margin="0,0,0,20"/>

                    <TextBox Text="{Binding NovaMeta.Nome}" 
                            Watermark="Nome da meta"/>
                    
                    <TextBox Text="{Binding NovaMeta.Descricao}" 
                            Watermark="Descrição"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            Height="100"/>
                    
                    <NumericUpDown Value="{Binding NovaMeta.Valor}"
                                  Watermark="Valor da meta"
                                  FormatString="N2"
                                  Minimum="0"/>

                    <NumericUpDown Value="{Binding Progresso}"
                                  Watermark="Progresso atual"
                                  FormatString="N2"
                                  Minimum="0"
                                  IsVisible="{Binding SelectedMeta}"/>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Margin="0,10">
                        <TextBlock Text="Data Início" Grid.Row="0" Grid.Column="0"/>
                        <CalendarDatePicker Grid.Row="1" Grid.Column="0"
                                          SelectedDate="{Binding NovaMeta.DataInicio}"
                                          Margin="0,0,5,0"/>
                        
                        <TextBlock Text="Data Fim" Grid.Row="0" Grid.Column="1"/>
                        <CalendarDatePicker Grid.Row="1" Grid.Column="1"
                                          SelectedDate="{Binding NovaMeta.DataFim}"
                                          Margin="5,0,0,0"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" Spacing="10">
                        <Button Command="{Binding CancelCommand}">Cancelar</Button>
                        <Button Command="{Binding AtualizarProgressoCommand}"
                                IsVisible="{Binding SelectedMeta}">
                            Atualizar Progresso
                        </Button>
                        <Button Command="{Binding SaveCommand}">Salvar</Button>
                    </StackPanel>

                    <TextBlock Text="{Binding ErrorMessage}"
                               IsVisible="{Binding ErrorMessage}"
                               Foreground="Red"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Panel>

        <!-- Loading Overlay -->
        <Panel IsVisible="{Binding IsLoading}">
            <Rectangle Fill="Black" Opacity="0.5"/>
            <ProgressBar IsIndeterminate="True" Width="200"/>
        </Panel>
    </Grid>

    <UserControl.Styles>
        <Style Selector="TextBox">
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </UserControl.Styles>
</UserControl> 