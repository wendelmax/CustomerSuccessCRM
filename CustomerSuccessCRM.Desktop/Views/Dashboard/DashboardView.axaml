<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CustomerSuccessCRM.Desktop.ViewModels.Dashboard"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CustomerSuccessCRM.Desktop.Views.Dashboard.DashboardView"
             x:DataType="vm:DashboardViewModel">

    <ScrollViewer>
        <StackPanel Spacing="20">
            <!-- Header -->
            <Border Background="White" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="VisÃ£o geral do seu Customer Success CRM" Foreground="#6c757d"/>
                </StackPanel>
            </Border>

            <!-- Cards de EstatÃ­sticas -->
            <UniformGrid Columns="4" Rows="1">
                <!-- Total de Clientes -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
                            <Border Width="40" Height="40" Background="#007bff" CornerRadius="8">
                                <TextBlock Text="ðŸ‘¥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel>
                                <TextBlock Text="Total Clientes" FontSize="12" Foreground="#6c757d"/>
                                <TextBlock Text="{Binding TotalClientes}" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Total de Produtos -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="5,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
                            <Border Width="40" Height="40" Background="#28a745" CornerRadius="8">
                                <TextBlock Text="ðŸ“¦" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel>
                                <TextBlock Text="Total Produtos" FontSize="12" Foreground="#6c757d"/>
                                <TextBlock Text="{Binding TotalProdutos}" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Total de Metas -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="5,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
                            <Border Width="40" Height="40" Background="#ffc107" CornerRadius="8">
                                <TextBlock Text="ðŸŽ¯" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel>
                                <TextBlock Text="Total Metas" FontSize="12" Foreground="#6c757d"/>
                                <TextBlock Text="{Binding TotalMetas}" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Percentual de ConclusÃ£o -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="10,0,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
                            <Border Width="40" Height="40" Background="#17a2b8" CornerRadius="8">
                                <TextBlock Text="ðŸ“Š" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel>
                                <TextBlock Text="ConclusÃ£o" FontSize="12" Foreground="#6c757d"/>
                                <TextBlock Text="{Binding PercentualConclusao, StringFormat='{0:F1}%'}" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- ConteÃºdo Principal -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                <!-- Clientes Recentes -->
                <Border Background="White" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,20">
                            <TextBlock Text="ðŸ‘¥" FontSize="20"/>
                            <TextBlock Text="Clientes Recentes" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding ClientesRecentes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,10" Padding="15" Background="#f8f9fa" CornerRadius="6">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Nome}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Email}" Foreground="#6c757d" FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding Status}" FontSize="12">
                                                    <TextBlock.Styles>
                                                        <Style Selector="TextBlock">
                                                            <Setter Property="Foreground" Value="#28a745"/>
                                                        </Style>
                                                    </TextBlock.Styles>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Nenhum cliente encontrado" 
                                 IsVisible="{Binding ClientesRecentes.Count, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=0}"
                                 HorizontalAlignment="Center" Foreground="#6c757d" Margin="0,20"/>
                    </StackPanel>
                </Border>

                <!-- Metas Pendentes -->
                <Border Background="White" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,20">
                            <TextBlock Text="ðŸŽ¯" FontSize="20"/>
                            <TextBlock Text="Metas Pendentes" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding MetasPendentes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,10" Padding="15" Background="#f8f9fa" CornerRadius="6">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Nome}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Descricao}" Foreground="#6c757d" FontSize="12" TextWrapping="Wrap"/>
                                            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding DataFim, StringFormat='Vence: {0:dd/MM/yyyy}'}" FontSize="11" Foreground="#dc3545"/>
                                                <TextBlock Text="{Binding Status}" FontSize="11" Foreground="#ffc107"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Nenhuma meta pendente" 
                                 IsVisible="{Binding MetasPendentes.Count, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=0}"
                                 HorizontalAlignment="Center" Foreground="#6c757d" Margin="0,20"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Loading Overlay -->
            <Border Background="#80000000" IsVisible="{Binding IsLoading}" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Carregando..." Foreground="White" FontSize="16"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>

</UserControl> 