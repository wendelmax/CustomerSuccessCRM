<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CustomerSuccessCRM.Forms.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="CustomerSuccessCRM.Forms.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Customer Success CRM - Desktop">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#007bff" Padding="20">
            <StackPanel>
                <TextBlock Text="Customer Success CRM" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Sistema de GestÃ£o de Relacionamento com o Cliente" 
                           FontSize="14" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Clientes -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Margin="0,0,10,0"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="ðŸ‘¥ Clientes" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <TextBlock Text="{Binding Clientes.Count, StringFormat='Total: {0} clientes'}" 
                               FontSize="14" 
                               Margin="0,0,0,10"/>
                    
                    <ScrollViewer Height="200">
                        <ItemsControl ItemsSource="{Binding Clientes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#f8f9fa" 
                                            Margin="0,0,0,5" 
                                            Padding="10" 
                                            CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Nome}" 
                                                       FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Email}" 
                                                       FontSize="12" 
                                                       Foreground="#6c757d"/>
                                            <TextBlock Text="{Binding Telefone}" 
                                                       FontSize="12" 
                                                       Foreground="#6c757d"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Produtos -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="8" 
                    Margin="5,0,5,0"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="ðŸ“¦ Produtos" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <TextBlock Text="{Binding Produtos.Count, StringFormat='Total: {0} produtos'}" 
                               FontSize="14" 
                               Margin="0,0,0,10"/>
                    
                    <ScrollViewer Height="200">
                        <ItemsControl ItemsSource="{Binding Produtos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#f8f9fa" 
                                            Margin="0,0,0,5" 
                                            Padding="10" 
                                            CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Nome}" 
                                                       FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Descricao}" 
                                                       FontSize="12" 
                                                       Foreground="#6c757d"/>
                                            <TextBlock Text="{Binding Preco, StringFormat='R$ {0:F2}'}" 
                                                       FontSize="12" 
                                                       Foreground="#28a745"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Metas -->
            <Border Grid.Column="2" 
                    Background="White" 
                    CornerRadius="8" 
                    Margin="10,0,0,0"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="ðŸŽ¯ Metas" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <TextBlock Text="{Binding Metas.Count, StringFormat='Total: {0} metas'}" 
                               FontSize="14" 
                               Margin="0,0,0,10"/>
                    
                    <ScrollViewer Height="200">
                        <ItemsControl ItemsSource="{Binding Metas}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#f8f9fa" 
                                            Margin="0,0,0,5" 
                                            Padding="10" 
                                            CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Titulo}" 
                                                       FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Descricao}" 
                                                       FontSize="12" 
                                                       Foreground="#6c757d"/>
                                            <TextBlock Text="{Binding DataLimite, StringFormat='Prazo: {0:dd/MM/yyyy}'}" 
                                                       FontSize="12" 
                                                       Foreground="#dc3545"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window> 