@model CustomerSuccessCRM.Lib.Models.Meta
@using CustomerSuccessCRM.Lib.Models
@{
    ViewData["Title"] = "Nova Meta";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">
                    <span class="icon-target"></span>
                    Criar Nova Meta
                </h3>
            </div>
            <form asp-action="Create" method="post">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label">Nome *</label>
                                <input asp-for="Nome" class="form-control" placeholder="Digite o nome da meta" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Valor" class="control-label">Valor *</label>
                                <input asp-for="Valor" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                <span asp-validation-for="Valor" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DataInicio" class="control-label">Data de In√≠cio *</label>
                                <input asp-for="DataInicio" type="date" class="form-control" />
                                <span asp-validation-for="DataInicio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DataFim" class="control-label">Data de Fim *</label>
                                <input asp-for="DataFim" type="date" class="form-control" />
                                <span asp-validation-for="DataFim" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ResponsavelId" class="control-label">Respons√°vel ID</label>
                                <input asp-for="ResponsavelId" class="form-control" placeholder="ID do respons√°vel" />
                                <span asp-validation-for="ResponsavelId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="EquipeId" class="control-label">Equipe ID</label>
                                <input asp-for="EquipeId" class="form-control" placeholder="ID da equipe" />
                                <span asp-validation-for="EquipeId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label">Descri√ß√£o</label>
                        <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descri√ß√£o detalhada da meta..."></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <a asp-action="Index" class="btn btn-secondary">
                                <span class="icon-arrow-left"></span> Voltar
                            </a>
                        </div>
                        <div class="col-md-6 text-right">
                            <button type="submit" class="btn btn-primary">
                                <span class="icon-save"></span> Salvar
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Auto-focus no primeiro campo
            $('#Nome').focus();
            
            // Definir data de in√≠cio como hoje
            var today = new Date().toISOString().split('T')[0];
            $('#DataInicio').val(today);
            
            // M√°scara para valor
            $('#Valor').on('input', function() {
                var value = this.value.replace(/\D/g, '');
                value = (parseFloat(value) / 100).toFixed(2);
                this.value = value;
            });
        });
    </script>
}

<style>
    .icon-arrow-left::before { content: "‚Üê"; }
    .icon-save::before { content: "üíæ"; }
</style> 