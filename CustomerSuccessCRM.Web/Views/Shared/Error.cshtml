@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<div class="error-page">
    <h2 class="headline text-danger">Erro</h2>

    <div class="error-content">
        <h3><i class="fas fa-exclamation-triangle text-danger"></i> Oops! Algo deu errado.</h3>

        <p>
            @Model.Message
        </p>

        @if (Model.ShowDetails)
        {
            <p class="text-muted">
                @Model.Details
            </p>
        }

        @if (Model.ShowRequestId)
        {
            <p class="text-muted">
                <small>
                    <strong>ID da Requisição:</strong> <code>@Model.RequestId</code>
                </small>
            </p>
        }

        <div class="mt-4">
            <a href="javascript:history.back()" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
            <a href="/" class="btn btn-primary">
                <i class="fas fa-home"></i> Ir para a Página Inicial
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .error-page {
            margin: 20px auto;
            padding: 20px;
            max-width: 600px;
        }

        .error-page > .headline {
            float: left;
            font-size: 100px;
            font-weight: 300;
        }

        .error-page > .error-content {
            margin-left: 190px;
        }

        .error-page > .error-content > h3 {
            font-weight: 300;
            font-size: 25px;
        }

        @@media (max-width: 767px) {
            .error-page > .headline {
                float: none;
                text-align: center;
                font-size: 50px;
            }

            .error-page > .error-content {
                margin-left: 0;
                text-align: center;
            }
        }
    </style>
}
