<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Customer Success CRM</title>
    
    <!-- Google Fonts: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Material Symbols -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.7/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="//cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap4.min.css">
    
    <style>
        /* Estilos base */
        :root {
            --primary-color: #4f46e5;
            --primary-hover: #4338ca;
            --sidebar-dark-bg: #111827;
            --sidebar-dark-hover: #1f2937;
            --table-header-bg: #f9fafb;
            --table-border-color: #f3f4f6;
            --table-stripe-bg: #f9fafb;
            --table-hover-bg: #f3f4f6;
            --table-text-color: #111827;
            --table-header-text-color: #4b5563;
            --glass-bg: rgba(255, 255, 255, 0.7);
            --glass-border: rgba(255, 255, 255, 0.3);
            --border-radius: 12px;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
            color: #1e293b;
        }

        /* Estilos para badges de status */
        .badge {
            padding: 0.5em 0.8em;
            font-size: 0.75em;
            font-weight: 500;
            border-radius: 9999px;
            letter-spacing: -0.01em;
        }

        .badge-success { background-color: #dcfce7; color: #166534; }
        .badge-warning { background-color: #fef9c3; color: #854d0e; }
        .badge-danger { background-color: #fee2e2; color: #991b1b; }
        .badge-info { background-color: #e0f2fe; color: #075985; }
        .badge-secondary { background-color: #f1f5f9; color: #475569; }
        .badge-primary { background-color: #e0e7ff; color: #3730a3; }

        /* Estilos globais para tabelas */
        .table {
            color: var(--table-text-color);
            margin-bottom: 1rem;
            background-color: #fff;
            border-radius: var(--border-radius);
            overflow: hidden;
            border-collapse: separate;
            border-spacing: 0;
            box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
        }

        .table th {
            background-color: var(--table-header-bg);
            color: var(--table-header-text-color);
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
            padding: 1rem;
            border-bottom: 1px solid var(--table-border-color);
        }

        .table td {
            padding: 1rem;
            vertical-align: middle;
            border-top: 1px solid var(--table-border-color);
            font-size: 0.875rem;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: var(--table-stripe-bg);
        }

        .table-hover tbody tr:hover {
            background-color: var(--table-hover-bg);
            transition: background-color 0.2s;
        }

        .table-responsive {
            border: none;
            box-shadow: none;
            background: transparent;
        }

        /* Ajustes do layout principal */
        .wrapper {
            background-color: #f8fafc;
        }

        /* Header e Navbar */
        .main-header {
            background-color: var(--glass-bg);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--glass-border);
            padding: 0.75rem 1.5rem;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .main-header h1 {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1e293b;
        }

        /* Breadcrumb */
        .content-header {
            background-color: transparent;
            padding: 1.5rem 0 0.5rem 0;
            border-bottom: none;
        }

        .breadcrumb {
            background: #fff;
            padding: 0.5rem 1rem;
            border-radius: 9999px;
            font-size: 0.8rem;
            box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
            display: inline-flex;
            align-items: center;
        }

        /* Sidebar Container */
        .main-sidebar {
            background: linear-gradient(180deg, var(--sidebar-dark-bg) 0%, #1e1b4b 100%);
            border-right: 1px solid rgba(255, 255, 255, 0.1);
        }

        /* Logo e brand */
        .brand-link {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1.5rem 1rem;
        }

        .brand-logo {
            width: 32px;
            height: 32px;
            background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
            border-radius: 8px;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        }

        .brand-text {
            font-weight: 600;
            letter-spacing: -0.025em;
            color: #fff;
        }

        /* Menu items */
        .nav-sidebar .nav-link {
            border-radius: 8px;
            margin: 0.2rem 0.8rem;
            padding: 0.6rem 0.8rem;
            font-weight: 500;
            font-size: 0.9rem;
            transition: all 0.2s ease;
        }

        .nav-sidebar .nav-link.active {
            background: rgba(255, 255, 255, 0.1) !important;
            color: #fff !important;
            box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.2);
        }

        .nav-sidebar .nav-link:hover:not(.active) {
            background: rgba(255, 255, 255, 0.05);
        }

        .nav-header {
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: #64748b;
            padding: 1.5rem 1.5rem 0.5rem;
        }

        /* Material Symbols Integration */
        .material-symbols-rounded {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
            font-size: 20px;
        }

        .nav-link.active .material-symbols-rounded {
            font-variation-settings: 'FILL' 1;
        }

        /* Ajustes do conteúdo principal */
        .content-wrapper {
            margin-left: 250px;
            min-height: 100vh;
            background-color: #f4f6f9;
        }

        /* Content */
        .content {
            padding: 1rem;
        }

        /* Footer */
        .main-footer {
            margin-left: 250px;
            padding: 1rem;
            border-top: 1px solid #dee2e6;
            background-color: white;
        }

        /* Responsividade */
        @@media (max-width: 768px) {
            .content-wrapper,
            .main-header,
            .main-footer {
                margin-left: 0;
            }

            .main-header h1 {
                font-size: 1.2rem;
            }
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <span class="material-symbols-rounded">menu</span>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <h1 class="m-0">@ViewData["Title"]</h1>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <span class="material-symbols-rounded">notifications</span>
                        <span class="badge badge-warning navbar-badge">3</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <span class="dropdown-item dropdown-header">3 Notificações</span>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <span class="material-symbols-rounded mr-2" style="font-size: 18px; vertical-align: middle;">person_add</span> Novo cliente cadastrado
                            <span class="float-right text-muted text-sm">3 min</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <span class="material-symbols-rounded mr-2" style="font-size: 18px; vertical-align: middle;">track_changes</span> Meta próxima do prazo
                            <span class="float-right text-muted text-sm">1 hora</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item dropdown-footer">Ver Todas as Notificações</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <span class="material-symbols-rounded">fullscreen</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-controller="Dashboard" asp-action="Index" class="brand-link">
                <div class="brand-logo">C</div>
                <span class="brand-text">Customer Success CRM</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                         <!-- Dashboard -->
                        <li class="nav-item">
                            <a asp-controller="Dashboard" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                <span class="nav-icon material-symbols-rounded">dashboard</span>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        
                        <!-- Clientes -->
                        <li class="nav-item">
                            <a asp-controller="Clientes" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Clientes" ? "active" : "")">
                                <span class="nav-icon material-symbols-rounded">group</span>
                                <p>Clientes</p>
                            </a>
                        </li>
                        
                        <!-- Produtos -->
                        <li class="nav-item">
                            <a asp-controller="Produtos" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Produtos" ? "active" : "")">
                                <span class="nav-icon material-symbols-rounded">inventory_2</span>
                                <p>Produtos</p>
                            </a>
                        </li>
                        
                        <!-- Metas -->
                        <li class="nav-item">
                            <a asp-controller="Metas" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Metas" ? "active" : "")">
                                <span class="nav-icon material-symbols-rounded">track_changes</span>
                                <p>Metas</p>
                            </a>
                        </li>
                        
                        <li class="nav-header">RELATÓRIOS</li>
                        
                        <!-- Relatórios -->
                        <li class="nav-item">
                            <a asp-controller="Dashboard" asp-action="Relatorios" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Relatorios" ? "active" : "")">
                                <span class="nav-icon material-symbols-rounded">analytics</span>
                                <p>Relatórios</p>
                            </a>
                        </li>
                        
                        <li class="nav-header">CONFIGURAÇÕES</li>
                        
                        <!-- Configurações -->
                        <li class="nav-item">
                            <a asp-controller="Dashboard" asp-action="Configuracoes" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Configuracoes" ? "active" : "")">
                                <span class="nav-icon material-symbols-rounded">settings</span>
                                <p>Configurações</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <!-- Breadcrumb -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                             <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a asp-controller="Dashboard" asp-action="Index" class="d-flex align-items-center">
                                        <span class="material-symbols-rounded mr-1" style="font-size: 18px;">home</span> Home
                                    </a>
                                </li>
                                @if (ViewContext.RouteData.Values["Controller"]?.ToString() != "Dashboard")
                                {
                                    <li class="breadcrumb-item">
                                        <a asp-controller="@ViewContext.RouteData.Values["Controller"]" asp-action="Index">
                                            @ViewContext.RouteData.Values["Controller"]
                                        </a>
                                    </li>
                                }
                                @if (ViewContext.RouteData.Values["Action"]?.ToString() != "Index")
                                {
                                    <li class="breadcrumb-item active">@ViewContext.RouteData.Values["Action"]</li>
                                }
                                else if (ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard")
                                {
                                    <li class="breadcrumb-item active">Dashboard</li>
                                }
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                     @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <div class="d-flex align-items-center">
                                <span class="material-symbols-rounded mr-2">check_circle</span>
                                <div>
                                    <h5 class="mb-0 font-weight-bold" style="font-size: 1rem;">Sucesso!</h5>
                                    <span style="font-size: 0.9rem;">@TempData["Success"]</span>
                                </div>
                            </div>
                        </div>
                    }
                    
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <div class="d-flex align-items-center">
                                <span class="material-symbols-rounded mr-2">error</span>
                                <div>
                                    <h5 class="mb-0 font-weight-bold" style="font-size: 1rem;">Erro!</h5>
                                    <span style="font-size: 0.9rem;">@TempData["Error"]</span>
                                </div>
                            </div>
                        </div>
                    }

                    @if (TempData["Info"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show border-0 shadow-sm">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <div class="d-flex align-items-center">
                                <span class="material-symbols-rounded mr-2">info</span>
                                <div>
                                    <h5 class="mb-0 font-weight-bold" style="font-size: 1rem;">Informação</h5>
                                    <span style="font-size: 0.9rem;">@TempData["Info"]</span>
                                </div>
                            </div>
                        </div>
                    }
                    
                    @RenderBody()
                </div>
            </section>
        </div>
        
        <footer class="main-footer">
            <strong>Copyright &copy; 2025 <a href="#">Customer Success CRM</a>.</strong>
            Sistema de Gestão de Relacionamento com o Cliente.
            <div class="float-right d-none d-sm-inline-block">
                <b>Versão</b> 1.0.0
            </div>
        </footer>
    </div>

    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle sidebar
            const pushMenuBtn = document.querySelector('[data-widget="pushmenu"]');
            if (pushMenuBtn) {
                pushMenuBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    document.body.classList.toggle('sidebar-collapse');
                });
            }
            
            // Fullscreen toggle
            const fullscreenBtn = document.querySelector('[data-widget="fullscreen"]');
            if (fullscreenBtn) {
                fullscreenBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    if (!document.fullscreenElement) {
                        document.documentElement.requestFullscreen();
                    } else {
                        document.exitFullscreen();
                    }
                });
            }
            
            // Dropdown menus
            const dropdownToggles = document.querySelectorAll('[data-toggle="dropdown"]');
            dropdownToggles.forEach(function(toggle) {
                toggle.addEventListener('click', function(e) {
                    e.preventDefault();
                    const dropdown = this.nextElementSibling;
                    dropdown.classList.toggle('show');
                });
            });
            
            // Close dropdowns when clicking outside
            document.addEventListener('click', function(e) {
                if (!e.target.closest('.dropdown')) {
                    document.querySelectorAll('.dropdown-menu.show').forEach(function(menu) {
                        menu.classList.remove('show');
                    });
                }
            });
            
            // Auto-hide alerts
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                setTimeout(function() {
                    alert.style.opacity = '0';
                    setTimeout(function() {
                        alert.remove();
                    }, 300);
                }, 5000);
            });
        });
    </script>
    
    <!-- DataTables & Plugins -->
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/1.13.7/js/dataTables.bootstrap4.min.js"></script>
    <script src="//cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="//cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap4.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
