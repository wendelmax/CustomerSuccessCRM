@model CustomerSuccessCRM.Web.ViewModels.CrmDashboard
@using CustomerSuccessCRM.Lib.Models
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .info-box {
        min-height: 120px;
        background: #fff;
        width: 100%;
        border-radius: var(--border-radius);
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        padding: 1rem;
        border: 1px solid #f1f5f9;
        box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .info-box:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
        border-color: var(--primary-color);
    }

    .info-box-icon {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1.25rem;
    }

    .info-box-icon .material-symbols-rounded {
        font-size: 28px;
        color: #fff;
    }

    .info-box-content {
        flex: 1;
    }

    .info-box-number {
        display: block;
        font-weight: 700;
        font-size: 1.75rem;
        color: #0f172a;
        line-height: 1;
        margin-bottom: 0.25rem;
    }

    .info-box-text {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        color: #64748b;
        text-transform: none;
    }

    .bg-gradient-blue { background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); }
    .bg-gradient-green { background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%); }
    .bg-gradient-orange { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); }
    .bg-gradient-red { background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); }

    .card {
        border-radius: var(--border-radius);
        border: 1px solid #f1f5f9;
        box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
        background-color: #fff;
    }

    .card-header {
        padding: 1.25rem;
        background: transparent;
        border-bottom: 1px solid #f1f5f9;
    }

    .card-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1e293b;
        margin: 0;
    }

    .valor-meta {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1e293b;
        letter-spacing: -0.025em;
    }

    .status-meta {
        padding: 1.25rem;
        border-radius: 12px;
        text-align: center;
    }

    .status-meta h4 {
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 0.5rem;
        letter-spacing: 0.025em;
    }

    .status-meta h2 {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
    }

    .status-meta.concluida { background-color: #f0fdf4; color: #166534; }
    .status-meta.andamento { background-color: #fffbeb; color: #92400e; }

    .btn-view-all {
        font-weight: 600;
        font-size: 0.875rem;
        color: var(--primary-color);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: color 0.2s;
    }

    .btn-view-all:hover {
        color: var(--primary-hover);
    }

    .produto-item {
        padding: 1.25rem;
        border-bottom: 1px solid #f1f5f9;
        transition: background-color 0.2s;
    }

    .produto-item:hover {
        background-color: #f8fafc;
    }

    .produto-nome {
        font-weight: 600;
        color: #1e293b;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .produto-preco {
        color: #16a34a;
        font-size: 0.9rem;
    }

    .produto-descricao {
        color: #64748b;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

<div class="row">
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box">
            <div class="info-box-icon bg-gradient-blue">
                <span class="material-symbols-rounded">group</span>
            </div>
            <div class="info-box-content">
                <span class="info-box-number">@Model.TotalClientes</span>
                <span class="info-box-text">Clientes Totais</span>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box">
            <div class="info-box-icon bg-gradient-green">
                <span class="material-symbols-rounded">track_changes</span>
            </div>
            <div class="info-box-content">
                <span class="info-box-number">@Model.TotalMetas</span>
                <span class="info-box-text">Metas Ativas</span>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box">
            <div class="info-box-icon bg-gradient-orange">
                <span class="material-symbols-rounded">chat_bubble</span>
            </div>
            <div class="info-box-content">
                <span class="info-box-number">@Model.TotalInteracoes</span>
                <span class="info-box-text">Interações Recentes</span>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box">
            <div class="info-box-icon bg-gradient-red">
                <span class="material-symbols-rounded">inventory_2</span>
            </div>
            <div class="info-box-content">
                <span class="info-box-number">@Model.TotalProdutos</span>
                <span class="info-box-text">Produtos em Linha</span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <span class="material-symbols-rounded mr-2 text-primary">payments</span>
                    <h3 class="card-title">Receita Planejada</h3>
                </div>
            </div>
            <div class="card-body d-flex flex-column justify-content-center text-center">
                <div class="valor-meta mb-1">
                    R$ @Model.ValorTotalMetas.ToString("N2")
                </div>
                <p class="text-muted mb-0">Volume total das metas em aberto</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <span class="material-symbols-rounded mr-2 text-primary">monitoring</span>
                    <h3 class="card-title">Performance de Metas</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="status-meta concluida">
                            <h4>Concluídas</h4>
                            <h2>@Model.MetasConcluidas</h2>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="status-meta andamento">
                            <h4>Andamento</h4>
                            <h2>@Model.MetasEmAndamento</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <span class="material-symbols-rounded mr-2 text-primary">recent_actors</span>
                    <h3 class="card-title">Clientes Recentes</h3>
                </div>
                <a asp-controller="Clientes" asp-action="Index" class="btn-view-all">
                    Ver Todos <span class="material-symbols-rounded" style="font-size: 18px;">chevron_right</span>
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table mb-0 border-0 shadow-none">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Empresa</th>
                                <th>Email</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ClientesRecentes != null && Model.ClientesRecentes.Any())
                            {
                                @foreach (var cliente in Model.ClientesRecentes.Take(5))
                                {
                                    <tr>
                                        <td class="font-weight-600">@cliente.Nome</td>
                                        <td>@cliente.Empresa</td>
                                        <td class="text-muted">@cliente.Email</td>
                                        <td>
                                            @if (cliente.Status == StatusCliente.Ativo)
                                            {
                                                <span class="badge badge-success">Ativo</span>
                                            }
                                            else if (cliente.Status == StatusCliente.Prospecto)
                                            {
                                                <span class="badge badge-info">Prospecto</span>
                                            }
                                            else if (cliente.Status == StatusCliente.Inativo)
                                            {
                                                <span class="badge badge-warning">Inativo</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Cancelado</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4">Nenhum cliente disponível</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <span class="material-symbols-rounded mr-2 text-primary">celebration</span>
                    <h3 class="card-title">Top Produtos</h3>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model.ProdutosMaisVendidos != null && Model.ProdutosMaisVendidos.Any())
                {
                    @foreach (var produto in Model.ProdutosMaisVendidos.Take(3))
                    {
                        <div class="produto-item">
                            <div class="produto-nome">
                                <span>@produto.Nome</span>
                                <span class="produto-preco">R$ @produto.PrecoBase.ToString("N2")</span>
                            </div>
                            <div class="produto-descricao">@produto.Descricao</div>
                        </div>
                    }
                }
                else
                {
                    <div class="produto-item text-center py-4">
                        Sem dados disponíveis
                    </div>
                }
            </div>
            <div class="card-footer bg-transparent border-0 text-center pb-4">
                <a asp-controller="Produtos" asp-action="Index" class="btn-view-all">
                    Lista Completa <span class="material-symbols-rounded" style="font-size: 18px;">chevron_right</span>
                </a>
            </div>
        </div>
    </div>
</div>
 