@model CustomerSuccessCRM.Web.ViewModels.CrmDashboard
@using CustomerSuccessCRM.Lib.Models
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .info-box {
        min-height: 100px;
        background: #fff;
        width: 100%;
        box-shadow: 0 0 1px rgba(0,0,0,.125), 0 1px 3px rgba(0,0,0,.2);
        border-radius: 0.25rem;
        margin-bottom: 1rem;
        display: flex;
        cursor: pointer;
        transition: all .3s ease;
    }

    .info-box:hover {
        transform: translateY(-3px);
        box-shadow: 0 2px 5px rgba(0,0,0,.2);
    }

    .info-box-icon {
        width: 80px;
        font-size: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .info-box-content {
        padding: 1rem;
        flex: 1;
    }

    .info-box-number {
        display: block;
        font-weight: bold;
        font-size: 1.5rem;
    }

    .info-box-text {
        display: block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        text-transform: uppercase;
        font-size: 0.9rem;
        color: #666;
    }

    .card {
        margin-bottom: 1rem;
        box-shadow: 0 0 1px rgba(0,0,0,.125), 0 1px 3px rgba(0,0,0,.2);
    }

    .card-header {
        background-color: transparent;
        border-bottom: 1px solid rgba(0,0,0,.125);
        padding: 0.75rem 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .valor-meta {
        font-size: 2.5rem;
        font-weight: 300;
        color: #007bff;
        margin: 1rem 0;
    }

    .status-meta {
        padding: 1rem;
        border-radius: 0.25rem;
        text-align: center;
        margin-bottom: 1rem;
    }

    .status-meta.concluida {
        background-color: #28a745;
        color: white;
    }

    .status-meta.andamento {
        background-color: #ffc107;
        color: #000;
    }

    .table th {
        border-top: none;
    }

    .produto-item {
        padding: 1rem;
        border-bottom: 1px solid #f4f4f4;
    }

    .produto-item:last-child {
        border-bottom: none;
    }

    .produto-nome {
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .produto-preco {
        float: right;
        color: #28a745;
    }

    .produto-descricao {
        color: #666;
        font-size: 0.9rem;
    }
</style>

<div class="row">
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box">
            <div class="info-box-icon bg-info">ðŸ‘¥</div>
            <div class="info-box-content">
                <span class="info-box-text">Clientes</span>
                <span class="info-box-number">@Model.TotalClientes</span>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box">
            <div class="info-box-icon bg-success">ðŸŽ¯</div>
            <div class="info-box-content">
                <span class="info-box-text">Metas</span>
                <span class="info-box-number">@Model.TotalMetas</span>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box">
            <div class="info-box-icon bg-warning">ðŸ’¬</div>
            <div class="info-box-content">
                <span class="info-box-text">InteraÃ§Ãµes</span>
                <span class="info-box-number">@Model.TotalInteracoes</span>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box">
            <div class="info-box-icon bg-danger">ðŸ“¦</div>
            <div class="info-box-content">
                <span class="info-box-text">Produtos</span>
                <span class="info-box-number">@Model.TotalProdutos</span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <span class="icon-chart"></span>
                <h3 class="card-title">Valor das Metas</h3>
            </div>
            <div class="card-body text-center">
                <div class="valor-meta">
                    R$ @Model.ValorTotalMetas.ToString("N2")
                </div>
                <p class="text-muted">Valor total das metas ativas</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <span class="icon-target"></span>
                <h3 class="card-title">Status das Metas</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="status-meta concluida">
                            <h4>ConcluÃ­das</h4>
                            <h2>@Model.MetasConcluidas</h2>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="status-meta andamento">
                            <h4>Em Andamento</h4>
                            <h2>@Model.MetasEmAndamento</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <span class="icon-users"></span>
                <h3 class="card-title">Clientes Recentes</h3>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Empresa</th>
                                <th>Email</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ClientesRecentes != null && Model.ClientesRecentes.Any())
                            {
                                @foreach (var cliente in Model.ClientesRecentes.Take(5))
                                {
                                    <tr>
                                        <td>@cliente.Nome</td>
                                        <td>@cliente.Empresa</td>
                                        <td>@cliente.Email</td>
                                        <td>
                                            @if (cliente.Status == StatusCliente.Ativo)
                                            {
                                                <span class="badge badge-success">Ativo</span>
                                            }
                                            else if (cliente.Status == StatusCliente.Prospecto)
                                            {
                                                <span class="badge badge-info">Prospecto</span>
                                            }
                                            else if (cliente.Status == StatusCliente.Inativo)
                                            {
                                                <span class="badge badge-warning">Inativo</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Cancelado</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center">Nenhum cliente encontrado</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <a asp-controller="Clientes" asp-action="Index" class="btn btn-sm btn-primary float-right">
                    Ver Todos os Clientes
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <span class="icon-box"></span>
                <h3 class="card-title">Produtos Mais Vendidos</h3>
            </div>
            <div class="card-body p-0">
                @if (Model.ProdutosMaisVendidos != null && Model.ProdutosMaisVendidos.Any())
                {
                    @foreach (var produto in Model.ProdutosMaisVendidos.Take(3))
                    {
                        <div class="produto-item">
                            <div class="produto-nome">
                                @produto.Nome
                                <span class="produto-preco">R$ @produto.PrecoBase.ToString("N2")</span>
                            </div>
                            <div class="produto-descricao">@produto.Descricao</div>
                        </div>
                    }
                }
                else
                {
                    <div class="produto-item text-center">
                        Nenhum produto encontrado
                    </div>
                }
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Produtos" asp-action="Index" class="btn btn-sm btn-primary">
                    Ver Todos os Produtos
                </a>
            </div>
        </div>
    </div>
</div> 